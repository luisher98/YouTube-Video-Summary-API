{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Development Tests",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test",
                "--",
                "--runInBand",
                "--watchAll=false",
                "--testTimeout=10000",
                "--detectOpenHandles"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
} 